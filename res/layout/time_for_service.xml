<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="250dp"
    android:background="@drawable/edittext_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#4e3115"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="Select time for service"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp" >

        <SeekBar
            android:id="@+id/seekBar_time_for_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:progress="2"
            android:progressDrawable="@drawable/apptheme_scrubber_progress_horizontal_holo_light"
            android:thumb="@drawable/apptheme_scrubber_control_selector_holo_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:padding="0dp" >

            <TextView
                android:id="@+id/txt_dialog_time"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:padding="10sp"
                android:text="Time"
                android:textColor="@drawable/textview_selector"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/txt_dialog_price"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:padding="10sp"
                android:text="Price"
                android:textColor="@drawable/textview_selector"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >
              <Button
                android:id="@+id/btn_time_for_service_cancel"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_default_bg"
                android:text="Cancel"
                android:textColor="#ffffff"
                android:textSize="16sp" />

                <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.5" />
              <Button
                android:id="@+id/btn_time_for_service_ok"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/button_default_bg"
                android:gravity="center"
                android:text="Ok"
                android:textColor="#ffffff"
                android:textSize="16sp" />
           <!--  <Button
                android:id="@+id/btn_time_for_service_ok"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/button_default_bg"
                android:gravity="center"
                android:text="Ok"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.5" />

            <Button
                android:id="@+id/btn_time_for_service_cancel"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_default_bg"
                android:text="Cancel"
                android:textColor="#ffffff"
                android:textSize="16sp" /> -->

        </LinearLayout>
    </LinearLayout>

</LinearLayout>